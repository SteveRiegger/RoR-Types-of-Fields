
<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :secret %><br />
    <%= f.text_field :secret %>
  </div>
  <div class="field">
	<table>
		<% @counties = {"Buncombe" => "Buncombe", "Madison" => "Madison", "Haywood" => "Haywood"} %>
			
			<% @counties.each do|x| %>
				<%= f.radio_button(:county, x[0]) %>
				<label for = "<%= ("student_county_" + x[1].downcase) %>">
				<%= x[0] %></label>
				
			<% end %>
		</table>
				
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :can_send_email %><br />
    <%= f.check_box :can_send_email %>
  </div>
  <div class="field">
	<% years = { '2010' => '2010','2011' => '2011','2012' => '2012','2013' => '2013','2014' => '2014','2015' => '2015','2016' => '2016','2017' => '2017','2018' => '2018' }%>

	<%= f.label :graduation_year %><br />
	<% list = years %>
	<%= f.select :graduation_year, list %>
	
  </div>
  <div class="field">
    <%= f.label :body_temperature %><br />
    <%= f.text_field :body_temperature %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday %>
  </div>
  <div class="field">
    <%= f.label :favorite_time %><br />
    <%= f.time_select :favorite_time %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
